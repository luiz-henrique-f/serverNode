// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String
  emailVerified DateTime?
  image         String?
}

model Clientes {
  id         String   @id @default(uuid())
  nome       String
  celular    String
  sexo       String
  created_at DateTime @default(now())

  @@map("clientes")
}

model Colaboradores {
  id         String   @id @default(uuid())
  nome       String
  celular    String
  foto       String
  created_at DateTime @default(now())

  @@map("colaboradores")
}

model Cupom {
  id           String @id @default(uuid())
  codigo_cupom String @unique
  id_servico   String
  ativo        String

  @@map("cupom")
}

model Servicos {
  id                   String @id @default(uuid())
  id_categoria_servico String
  descricao            String
  valor                String
  duracao              String

  @@map("servicos")
}

model Categoria_Servicos {
  id        String @id @default(uuid())
  descricao String

  @@map("categoria_servicos")
}

model Agendamento {
  id              String @id @default(uuid())
  id_cliente      String
  id_colaborador  String
  id_servico      String
  data            String
  hora_inicial    String
  hora_final      String
  forma_pagamento String
  status          String

  @@map("agendamento")
}
